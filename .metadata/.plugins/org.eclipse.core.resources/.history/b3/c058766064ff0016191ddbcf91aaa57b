		<url-pattern>login.do</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>auth</filter-name>
		<filter-class>state.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>auth</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>
	<!-- any HTTP request URI starting with /secure/
