<script type="text/javascript">
var pic = document.getElementById('pic'); // global
const on = 'on.jpg';
const off = 'off.jpg';

pic.addEventListener('mouseenter', swap, false);
pic.addEventListener('mouseleave', swap, false);
pic.addEventListener('mousemove', tooltip, false);
window.setTimeout(abc, 10000); //wait 10sec then exec callback func

function swap(e){
	dan = 'Pickles'; //global 
	var ctrl = e.ctrlKey;
	if(ctrl){
		if(pic.getAttribute('src')===on){
			pic.setAttribute('src', off);
		}else{
			pic.src = on;
		}
	}
}

function tooltip(e){
	var x = e.clientX - 10;
	var y = e.clientY - 10;
	
}

function abc(){
	alert(dan + on + off); // can access global variables
}
</script>
