</head>
<body>
<form action="#">
<h2>Add a Trainee</h2>
	Id: <input type="text" id="id"> <br/>
	Name: <input type="text" id="name"> <br/>
	Major: <input type="text" id="major"> <br/>
	<input type="submit" id="add" value="Add"> <br/>
</form>

<h2>All Trainees</h2>
<table>
	<tr><th>ID</th><th>Name</th><th>Major</th></tr>
</table>

</body>
<script type="text/javascript">
// trainee constructor
function Trainee(id,name,major) {
	this.id = id;
	this.name = name;
	this.major = major;
}
// get trainee from form
function process(){
	var trainee = 
		new Trainee( $('#id').val(), $('#name').val(), $('#major').val() );
	console.log(trainee);
	// add trainee as row to table
	$('table').append('<tr>');
	$('table').append('<td>' + trainee.id + "</td>");
	$('table').append('<td>' + trainee.name + "</td>");
	$('table').append('<td>' + trainee.major + "</td>");
	$('table').append('</tr>');
}
// process when add button clicked
$('#add').click(process);




</script>
</html>





