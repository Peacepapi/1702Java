<script type="text/javascript">
// trainee constructor
function Trainee(id,name,major) {
	this.id = id;
	this.name = name;
	this.major = major;
}
// get trainee from form
function process(){
	var trainee = 
		new Trainee( $('#id').val(), $('#name').val(), $('#major').val() );
	console.log(trainee);
	// add trainee as row to table
	$('table tbody').append('<tr><td>' 
		+ trainee.id + '</td><td>' 
		+ trainee.name + '</td><td>' 
		+ trainee.major + '</td></tr>');
	// pseudo-ajax
	var xhr = new XMLHttpRequest(); 
	// register our callback
	xhr.onreadystatechange = function(){
		if(xhr.readyState == '4' && xhr.status=='200'){
			console.log('Ajax call complete');
			console.log(xhr.response);
		}
	}
	// prepare our http request
	xhr.open('GET', 'http://localhost:7001/ajax/getAll', true);
	// send it to server
	//xhr.send(requestBody);
	xhr.send();

}
// process when add button clicked
$('#add').click(process);




</script>
</html>





