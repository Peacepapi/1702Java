<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<img src="off.jpg" id="pic" />
</body>
<script type="text/javascript">
var pic = document.getElementById('pic'); // global
const on = 'on.jpg';
const off = 'off.jpg';

document.addEventListener('DOMContentLoaded', function(e) {
	abc();
}, false);
pic.addEventListener('mouseenter', swap, false);
pic.addEventListener('mouseleave', swap, false);

function swap(){
	dan = 'Pickles'; //global 
	if(pic.getAttribute('src')===on){
		pic.setAttribute('src', off);
	}else{
		pic.src = on;
	}
}

function abc(){
	alert(dan + on + off); // can access global variables
}
</script>
</html>







